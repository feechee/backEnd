extends layout

block productos
  if productos.productos
    table(class="table table-dark table-striped")
      thead
        tr
          th(scope="col") Nombre
          th(scope="col") Precio
          th(scope="col") Foto

      tbody
        for producto in productos
          tr
            td= producto.title
            td= producto.price
            td= producto.thumbnail

  else 
    h3(class="alert alert-danger") No hay productos


  a(class="btn btn-primary" href="/" role="button") Ingresar Productos


  