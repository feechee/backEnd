<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
            Log In
        </div>
        <form action="/users/signin" method="POST" role="form">
            <div class="card-body">
                <label for="exampleInputEmail1" class="form-label">E-mail</label>
                <input
                type="email"
                class="form-control"
                id="email"
                aria-describedby="emailHelp"
                name="email"
                />
                <label
                for="exampleInputEmail1"
                class="form-label"
                >Contrase√±a</label>
                <input
                type="password"
                class="form-control"
                id="password"
                aria-describedby="emailHelp"
                name="password"
                />
                <div id="emailHelp" class="form-text"></div>

            </div>
            <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
        </form>
        
        <button class="logOut btn btn-secondary my-5" onclick="location.href='/users/signup'">Registrarse</button>
      </div>
    </div>
  </div>
</div>

